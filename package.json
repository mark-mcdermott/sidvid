{
  "name": "sidvid",
  "version": "0.0.1",
  "type": "module",
  "description": "AI-powered video generation using OpenAI ChatGPT, DALL-E 3, and Sora",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "openai",
    "chatgpt",
    "dall-e",
    "sora",
    "video",
    "ai",
    "generation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mark-mcdermott/sidvid-core.git"
  },
  "packageManager": "pnpm@10.27.0",
  "dependencies": {
    "openai": "^6.16.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "dotenv": "^17.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
